<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.dao.cm.quartz.QrtzCronTriggersExtDao">
    <sql id="Base_Column_List">
        id, schedName, triggerName, triggerGroup, cronExpression
    </sql>
    <!--条件查询定时任务配置信息-->
    <select id="selectByCodition" resultType="com.domain.cm.quartz.QrtzCronTriggersDto">
        select
        <include refid="Base_Column_List"/>
        from qrtz_cron_triggers
        <where>
            <if test="id != null">
                and id= #{id,jdbcType=BIGINT}
            </if>
            <if test="triggerGroup != null">
                and triggerGroup= #{triggerGroup,jdbcType=VARCHAR}
            </if>
            <if test="triggerName != null">
                and triggerName= #{triggerName,jdbcType=VARCHAR}
            </if>
            <if test="schedName != null">
                and schedName= #{schedName,jdbcType=VARCHAR}
            </if>
        </where>
    </select>
</mapper>